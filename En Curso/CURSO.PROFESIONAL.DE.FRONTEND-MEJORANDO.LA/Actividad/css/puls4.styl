azul = #22BCE0
gris_oscuro = #444
naranja = #DD4F00
gris_texto = #7A7A7A

a
	color naranja
	text-decoration none

body
	background #E8E8E8
	color gris_oscuro
	font-family Arial
	font-size 16px

footer
	background: naranja
	color rgba(white, 0.6)
	padding 1.5em 0 1.5em 0
	text-align: center
	font-size 14px
	font-weight normal
	top: 100%
	width 100%
	.powered
		display block
	.mejor 
		display block
		&:before
		&:after
			content "-"


	label
		display: inline-block
		width: 50px

form
	padding 0.8em
	display none 
	
	
	label
		display inline-block
		width 60px
	

header
	background gris_oscuro
	color white
	overflow: auto
	padding 0.5em
	position: relative
	box-shadow: 0px 5px 0px rgba(black, 0.3)
	z-index: 1

	.logo
		width: 80px
		border-right: 1px solid azul
		float: left
		img
			width: 72px
	.titular
		margin: 0 100px 1.5em 90px
		.titulo
			font-size: 18px
			font-weight: normal
			margin 0
			padding 0
		.filtro
			color: azul
			font-size: 14px
			font-style: italic
			margin: 0
			position: absolute
			bottom: 0.7em
			font-weight: bold
			
		.publicar
			margin: 0
			position: absolute
			bottom: 0.6em
			right: 105px
			padding: 0.2em 0.5em
			background: naranja
			font-style: italic
			text-shadow: 1px 1px 0px rgba(black, 0.5)
			color white
	.usuario
		position: absolute 
		top: 0.5em
		right: 2em
		width 72px
		.avatar
			margin: 0
			position: relative
			z-index: 2
			img
				border-radius: 50%
				width 72px
		.flechita
			background: naranja
			color: white
			display: block
			height: 40%
			margin: 0 -1em 0 0
			position: absolute
			right: 0
			top: 30%
			text-align: right
			width: 50%
			z-index: 0
			&:after
				content ""
				border-left 4px solid transparent
				border-top 6px solid white
				border-right 4px solid transparent
				position: absolute
				right: 18%
				top: 40%
			&:before
				content ""
				border-left 4px solid transparent
				border-top 6px solid rgba(black, 0.5)
				border-right 4px solid transparent
				position: absolute
				right: 15%
				top: 43%
nav
	background: azul
	position: relative
	border-left: 15px solid white
	&:before
		border-bottom: 20px solid transparent
		border-left: 7px solid white 
		border-top: 20px solid transparent
		content ""
		position: absolute
		top 0
		left 0
	&:after
		border-bottom: 40px solid transparent
		border-right: 40px solid rgba(azul, .65)
		content ""
		position: absolute
		top 0
		right: 0
	.menu
		height: 40px
		line-height: 40px
		margin: 0
		overflow-x auto
		overflow-y hidden
		white-space: nowrap
		padding 0
		li
			display: inline-block
			a
				color: white
				display: inline-block
				margin: 0 0.5em
				padding: 0.2em
.posts
	padding 0.5em
	.post
		background: white
		border-radius:  0 0 0.5em 0.5em
		color: gris_texto
		box-shadow: 2px 2px 10px rgba(black, 0.5)
		overflow: auto
		margin 0 0 0.5em 0
		display: block
		.acciones
			border-top: 3px solid azul
			padding 0.5em
			.votos
				display inline-block
				.up
					position: relative
					padding: 0 2em 0 0
					&:after
						content ""
						position: absolute
						border-right: 10px solid transparent
						border-bottom: 12px solid #0f0 
						border-left: 10px solid transparent
						top 3px
						left:  0
				.down
					position: relative
					left: 4em
					top: -1em
					&:after
						content ""
						position: absolute
						border-right: 10px solid transparent
						border-top: 12px solid naranja 
						border-left: 10px solid transparent
						top 0
						left: 0
			.datos
				float right
				.comentarios
					color: white
					margin: 0 2em 0 0
					border-radius: 0.2em
					background: gris_texto
					padding: 0.1em 0.1em 0.1em 0.4em 
					font-size: 12px
					position: relative
					&:after
						content ""
						border-right: 5px solid transparent
						border-top: 5px solid gris_texto 
						border-left: 5px solid transparent
						position: absolute
						top: 1.3em
						right: 0em
				.estrellita
					&:after
						content ""
						position: absolute
						border-right: 5px solid transparent
						border-bottom: 10px solid gris_texto 
						border-left: 5px solid transparent
						top 0
						right 0
						
		.descripcion
			.imagen
				margin: 0
				float: left
				vertical-align: top
				img
					width 120px
					height 160px
			.detalles
				height: 160px
				padding: 0.5em 0.5em 0.5em 130px
				position: relative
				.autor
					margin: 0.5em 0 2em 0
				.titulo
					margin: 0
					color: gris_oscuro
					font-style: italic
					font-size: 18px
					line-height: 28px
				.tag
					background: azul
					border-radius: 0.5em
					color: white
					padding 0.2em 0.5em
					position: absolute
					bottom: 2em
				.fecha
					margin: 0
					position: absolute
					bottom: 2em
					right: 0.5em

@media screen and (max-width: 340px)
	header
		height: 110px
		overflow hidden
		.titular
			.publicar
				left: 0.5em
				right: auto
			.filtro
				right: 45px
				left: auto
	.posts
		.post
			.descripcion
				.detalles
					.titulo
						font-size: 16px
					
@media screen and (min-width: 768px)
	
	header
		.titular
			margin: 0 49% 1.5em 90px
			.titulo
				font-size: 1.2em
				font-weight: bold
	.posts
		.post
			width: 49%
			display: inline-block
			vertical-align: top 
			&:nth-child(odd)
				margin-right: 1%